<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="220vp"
    ohos:width="170vp"
    ohos:orientation="vertical"
    ohos:margin="3vp"
    ohos:background_element="$graphic:background_index_image">


    <!--显示商品的组件-->

    <Image
        ohos:id="$+id:iv_recommend"
        ohos:height="150vp"
        ohos:width="150vp"
        ohos:image_src="$media:taobao"
        ohos:clip_alignment="center"
        ohos:scale_mode="clip_center"/>

    <Text
        ohos:id="$+id:tv_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="10fp"
        ohos:text="商品名称"/>
    <Text
        ohos:id="$+id:tv_price"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="10fp"
        ohos:text="￥ 13.3"
        ohos:text_color="#ff383d"/>

</DirectionalLayout>