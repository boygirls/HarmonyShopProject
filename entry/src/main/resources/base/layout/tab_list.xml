<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:top_margin="15vp"
    ohos:orientation="vertical">

    <Component
        ohos:id="$+id:tab_component"
        ohos:width="match_parent"
        ohos:height="550vp"
        ohos:text_alignment="center"
        ohos:background_element="#70dbdb"
        ohos:text_color="#2e2e2e"
        ohos:text_size="16fp"/>


    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="5"
        ohos:layout_alignment="center">
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:weight="1"
            ohos:image_src="$media:index"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:weight="1"
            ohos:image_src="$media:list"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:weight="1"
            ohos:image_src="$media:word"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:layout_alignment="center"
            ohos:image_src="$media:shop"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:layout_alignment="center"
            ohos:image_src="$media:user"/>

    </DirectionalLayout>



    <TabList
        ohos:id="$+id:tab_list"
        ohos:tab_length="140vp"
        ohos:text_size="20fp"
        ohos:height="36vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:text_alignment="center"
        ohos:normal_text_color="#999999"
        ohos:selected_text_color="#afaafa"
        ohos:selected_tab_indicator_color="#afaafa"
        ohos:selected_tab_indicator_height="2vp">

    </TabList>





</DirectionalLayout>