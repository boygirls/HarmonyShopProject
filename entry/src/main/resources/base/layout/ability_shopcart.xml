<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#ffffff"
    ohos:padding="5vp">

    <Text
        ohos:id="$+id:shopcart_title_text"
        ohos:align_parent_top="true"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="我的购物车"
        ohos:text_size="15fp"
        ohos:text_color="#bbbbbb"
        ohos:layout_alignment="center"/>

    <ScrollView
        ohos:id="$+id:shopcart_list_scrollview"
        ohos:below="$id:shopcart_title_text"
        ohos:above="$id:account_button"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:bottom_margin="90vp">

        <TableLayout
            ohos:id="$+id:shopcart_list_table"
            ohos:height="match_content"
            ohos:width="match_parent"/>

        <DirectionalLayout
            ohos:height="80vp"
            ohos:width="match_parent"
            ohos:top_margin="5vp"
            ohos:orientation="horizontal"
            ohos:background_element="#fffff"
            ohos:alignment="vertical_center">

            <Checkbox
                ohos:height="25vp"
                ohos:width="25vp"
                ohos:check_element="$graphic:checkbox_check_element"/>

            <Image
                ohos:height="74vp"
                ohos:width="74vp"
                ohos:image_src="$media:default_head"
                ohos:margin="3vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="100vp"
                ohos:text_size="10fp"
                ohos:text_alignment="left"
                ohos:text="XXXXX"
                ohos:multiple_lines="true"
                ohos:padding="5vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="12fp"
                ohos:text_alignment="left"
                ohos:text="￥ 13.80"
                ohos:padding="5vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="12fp"
                ohos:text_alignment="left"
                ohos:text="2"
                ohos:padding="5vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="12fp"
                ohos:text_alignment="left"
                ohos:text="￥ 27.60"
                ohos:padding="5vp"/>

        </DirectionalLayout>

    </ScrollView>

    <Button
        ohos:id="$+id:account_button"
        ohos:align_parent_bottom="true"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="结  算"
        ohos:text_color="#ffffff"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:background_element="#ff383b"
        ohos:bottom_margin="45vp"/>


</DependentLayout>