<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:orientation="vertical"
    ohos:background_element="#FFDBFCED">

    <Image
        ohos:height="match_content"
        ohos:width="200vp"
        ohos:scale_mode="zoom_center"
        ohos:image_src="$media:hello"/>
    
    <TextField
        ohos:id="$+id:login_username"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录账号"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:background_textfield"/>

    <TextField
        ohos:id="$+id:login_pwd"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="登录密码"
        ohos:text_size="15fp"
        ohos:text_color="#777777"
        ohos:text_alignment="vertical_center"
        ohos:margin="5vp"
        ohos:padding="10vp"
        ohos:background_element="$graphic:background_textfield"/>

    <Button
        ohos:id="$+id:login_btn"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="登  录"
        ohos:text_color="#ffffff"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:background_element="red"
        ohos:top_margin="15vp"/>

</DirectionalLayout>