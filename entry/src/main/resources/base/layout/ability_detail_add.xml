    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="bottom"
        ohos:orientation="horizontal"
        ohos:alignment="left">
        <Button
            ohos:id="$+id:btn_exit"
            ohos:align_parent_bottom="true"
            ohos:height="match_content"
            ohos:width="190vp"
            ohos:text="返回"
            ohos:text_color="#ffffff"
            ohos:text_size="13fp"
            ohos:padding="10vp"
            ohos:background_element="#FFEA5353"
            ohos:bottom_margin="45vp"
            ohos:margin="5vp"/>
        <Button
            ohos:id="$+id:shopcart_add_button"
            ohos:align_parent_bottom="true"
            ohos:height="match_content"
            ohos:width="190vp"
            ohos:text="添加到购物车"
            ohos:text_color="#ffffff"
            ohos:text_size="13fp"
            ohos:padding="10vp"
