<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:tv_add_info_img"
        ohos:height="350vp"
        ohos:width="match_parent"
        ohos:image_src="$media:content"
        ohos:scale_mode="clip_center"
        />

    <Text
        ohos:id="$+id:product_detail_price"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#ff0000"
        ohos:text_size="30fp"
        ohos:text_alignment="left"
        ohos:text="￥150.00"
        ohos:top_margin="10vp"
        ohos:padding="5vp"/>
    
    <Text
        ohos:id="$+id:tv_add_info_name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#323427"
        ohos:text_size="15fp"
        ohos:top_margin="15vp"
        ohos:text="【预售】《来年就交给你啦》珍藏画册 限量礼盒版"
        ohos:multiple_lines="true"
        ohos:padding="5vp"/>

    <Text
        ohos:id="$+id:tv_add_info_desc"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#cccccc"
        ohos:text_size="10fp"
        ohos:top_margin="10vp"
        ohos:text="预售截止10月15日，预售期为限量礼盒版，包括特制木盒x1、画集x1、邮票x1套、书签x1、贴纸x1、信封x1、礼盒特"
        ohos:multiple_lines="true"
        ohos:max_height="3"
        ohos:padding="5vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="5vp">

        <Text
            ohos:height="35vp"
            ohos:width="match_content"
            ohos:text="数量："
            ohos:text_size="12fp"
            ohos:text_alignment="center"/>
        <Button
            ohos:id="$+id:num_btn1"
            ohos:height="35vp"
            ohos:width="match_content"
            ohos:text="-"
            ohos:text_size="15fp"
            ohos:text_alignment="center"
            ohos:left_margin="20vp"/>
        <Text
            ohos:id="$+id:num_text"
            ohos:height="35vp"
            ohos:width="40vp"
            ohos:text="1"
            ohos:text_size="15fp"
            ohos:text_alignment="center"/>
        <Button
            ohos:id="$+id:num_btn2"
            ohos:height="35vp"
            ohos:width="match_content"
            ohos:text="+"
            ohos:text_size="15fp"
            ohos:text_alignment="center"/>

    </DirectionalLayout>

