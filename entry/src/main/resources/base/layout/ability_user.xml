<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

<ScrollView
    ohos:id="$+id:scrollview"
    ohos:height="match_parent"
    ohos:padding="0"
    ohos:margin="0"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">

<!--        头部头像登录按钮-->
        <DependentLayout
            ohos:height="170vp"
            ohos:width="match_content"
            ohos:background_element="white"
            >

            <Button
                ohos:height="50vp"
                ohos:width="50vp"
                ohos:center_in_parent="true"
                ohos:align_parent_right="true"
                ohos:background_element="$media:taobao"/>
            <Text
                ohos:id="$+id:tv_username"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:align_right="true"
                ohos:text="登录/注册"
                ohos:top_margin="130vp"
                ohos:text_color="black"
                ohos:horizontal_center="true"/>

        </DependentLayout>

<!--        我的订单-->
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="10vp">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:text="我的订单"
            ohos:text_color="#5d5d5d"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:text_color="#5d5d5d"
            ohos:element_right="$media:home_arrow_right"
            ohos:text="查看全部订单"/>


        </DependentLayout>

<!--订单状态-->
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:padding="10vp">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:weight="1"
                ohos:element_top="$media:new_order_status_fukuan"
                ohos:element_padding="10vp"
                ohos:layout_alignment="center"
                ohos:text_alignment="center"
                ohos:text="待付款"
                ohos:text_color="#5d5d5d"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:weight="1"
                ohos:element_top="$media:new_order_status_fahuo"
                ohos:element_padding="10vp"
                ohos:layout_alignment="center"
                ohos:text_alignment="center"
                ohos:text="待发货"
                ohos:text_color="#5d5d5d"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:weight="1"
                ohos:element_top="$media:new_order_status_shouhuo"
                ohos:element_padding="10vp"
                ohos:layout_alignment="center"
                ohos:text_alignment="center"
                ohos:text="待收货"
                ohos:text_color="#5d5d5d"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:weight="1"
                ohos:element_top="$media:icon_order_status_finish"
                ohos:element_padding="10vp"
                ohos:layout_alignment="center"
                ohos:text_alignment="center"
                ohos:text="已完成"
                ohos:text_color="#5d5d5d"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:weight="1"
                ohos:element_top="$media:new_order_status_help"
                ohos:element_padding="10vp"
                ohos:layout_alignment="center"
                ohos:text_alignment="center"
                ohos:text="退款/售后"
                ohos:text_color="#5d5d5d"/>
        </DirectionalLayout>


        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"

            ohos:orientation="vertical">
            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_address"
                ohos:text="收货地址"/>
            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_collect"
                ohos:text="我的收藏"/>
            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_coupon"
                ohos:text="我的优惠卷"/>

            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_score"
                ohos:text="我的瓜子"/>

            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_prize"
                ohos:text="我的奖品"/>

            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_icon_ticket"
                ohos:text="我的电子发票"/>
            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_invitation"
                ohos:text="邀请分享"/>

            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_collect"
                ohos:text="客服中心"/>

            <Text
                ohos:height="8vp"
                ohos:width="match_parent"
                ohos:scrollbar_background_color="#eee"/>
            <Text
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:element_left="$media:user_channel_icon_feedback"
                ohos:text="服务反馈"/>


        </DirectionalLayout>
    </DirectionalLayout>
</ScrollView>

</DirectionalLayout>