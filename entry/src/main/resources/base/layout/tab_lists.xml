<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="horizontal_center"/>
    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:weight="5"
        ohos:layout_alignment="bottom">
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:weight="1"
            ohos:image_src="$media:index"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:weight="1"
            ohos:image_src="$media:list"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:weight="1"
            ohos:image_src="$media:word"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:layout_alignment="center"
            ohos:image_src="$media:shop"/>
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:weight="1"
            ohos:layout_alignment="center"
            ohos:image_src="$media:user"/>

    </DirectionalLayout>

    <TabList
        ohos:layout_alignment="bottom"
        ohos:id="$+id:tab_list"
        ohos:tab_length="140vp"
        ohos:text_size="20fp"
        ohos:height="36vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:text_alignment="center"
        ohos:normal_text_color="#999999"
        ohos:selected_text_color="#afaafa"
        ohos:selected_tab_indicator_color="#afaafa"
        ohos:selected_tab_indicator_height="2vp">

    </TabList>

</StackLayout>