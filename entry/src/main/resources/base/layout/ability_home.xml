        ohos:id="$+id:index_product_list"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:column_count="2">

        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="220vp"
            ohos:width="170vp"
            ohos:background_element="$graphic:background_index_image"
            ohos:margin="3vp"
            ohos:orientation="vertical">

            <!--显示商品的组件-->
            <Image
                ohos:height="150vp"
                ohos:width="150vp"
                ohos:clip_alignment="center"
                ohos:image_src="$media:taobao"
                ohos:scale_mode="clip_center"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:padding="2vp"
                ohos:text="商品名称"
                ohos:text_size="10fp"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
